        padding-bottom: 18px;
    }

    .popover-content {
        padding: 1px;
        border-radius: 4px;
    }

    .popheader-icon {
        background: #00A1E0;
        color: #fff;
        font-size: 18px;
        padding: 9px 12px;
        border-radius: 3px;
        float: left;
        margin-right: 8px;
    }

    .popup-content {
        padding: 10px;
    }

    .popheader-heading {
        font-size: 20px;
        padding-top: 9px;
    }

    .popcontent-row {
