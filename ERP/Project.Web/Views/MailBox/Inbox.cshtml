<script>
    function ReadMail(Message_No) {
        $.post('/MailBox/ReadMessage', { MessageNo: Message_No }, function (data) {
            if (data != "") {
                $("#mailBody").html('');
                $("#mailBody").html(data);                
            }
            else {
                location.reload();
            }
        });
    }
</script>