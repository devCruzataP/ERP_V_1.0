@model Project.Web.Models.DropDownModel
@{
    Layout = null;
 }
<div id="div_Source">
    <table class="table table-hover">
       
           
                @foreach (var opt in Model.options)
                {
                    <tr style="border-bottom:1px;">
                        <td style="text-align:left;">
                            <label>@opt.Text</label>
                        </td>
                        <td style="text-align:right;">
                            <button type="button" class="btn btn-small" data-toggle="modal" data-target="#DropListModal" title="Edit Option" onclick="EditOption('@opt.Value','@opt.Text')"><i class="ti-pencil"></i></button>
                            <button type="button" class="btn btn-small" title="Delete Option" onclick="DeleteOption('@opt.Value')"><i class="ti-trash"></i></button>
                   
                        </td>
                    </tr>
             
               }
            
       
        

    </table>
</div>